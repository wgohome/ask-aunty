<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="d-flex align-items-center">
    <%= link_to root_path, class: "navbar-brand m-0" do %>
      <%= image_tag image_path('aunty-square.svg') %>
    <% end %>
    <h3 class="m-0 pt-2 pl-2 brand-name">
      <span class="m-0 y-0 pl-1" id="banner-typed-text"></span>
    </h3>
  </div>

  <div>
    <% if user_signed_in? %>
      <div class="nav-item dropdown">
        <%= image_tag "https://ui-avatars.com/api/?name=#{current_user.email}", class: "avatar dropdown-toggler pt-2", id: "navbarDropdown", data: { toggle: "dropdown", 'aria-haspopup': true, 'aria-expanded': false } %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user.meals.any? %>
            <%= link_to "Latest Makan", meal_path(current_user.meals.last.vanity_id), class: "dropdown-item nav-link ml-3" %>
            <%= link_to "Makan History", meals_path, class: "dropdown-item nav-link ml-3" %>
          <% end %>
          <%= link_to "Preferences", preferences_path, class: "dropdown-item nav-link ml-3" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item nav-link ml-3" %>
        </div>
      </div>
    <% else %>
      <div class="pt-1 nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </div>
    <% end %>
  </div>
  <div class="container hor-line"></div>
</div>
