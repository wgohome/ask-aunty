<div class="d-flex justify-content-center">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag image_path('comic1.png') %>
      </div>
      <div class="carousel-item">
        <%= image_tag image_path('comic2.png') %>
      </div>
      <div class="carousel-item">
        <%= image_tag image_path('comic3.png') %>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    </div>
  </div>
  <br>
  <div class="d-flex flex-column justify-content-center">
    <p>Eating in a group? But don't know what to eat?<br>
    <strong>Leave it to Aunty!</strong><br>
    Aunty will poll everyone...and suggest shiokk makan spots based on how your makan kakis vote!</p>
  </div>
</div>

<div data-controller="journey">

  <div class="d-flex justify-content-around">
    <div class="btn primarybtn btn-block half-tab m-2" data-remote="true" data-action="click->journey#joinmeal" data-target="journey.joinmeal" data-toggle="tooltip" data-placement="bottom" title='Join an existing makan poll that you have a Makan Code for'>Join Makan</div>

    <div class="btn primarybtn btn-block half-tab m-2" data-remote="true" data-action="click->journey#createmeal" data-target="journey.createmeal" data-toggle="tooltip" data-placement="bottom" title="Start a new makan poll for your makan kakis">Create Makan</div>
  </div>

  <div class="d-flex justify-content-center form-width">
    <%= simple_form_for(@meal, method: :post, url: '/join_meal') do |f| %>
      <%= f.input :vanity_id, label: 'Makan Code', input_html: { class: "sharp-box hide", 'data-target' => 'journey.mealId', placeholder: "eg: gh28Ty" }, label_html: { class: "hide", 'data-target' => 'journey.mealId' } %>
      <%= f.submit 'Join Makan', class: 'btn primarybtn btn-block hide', 'data-target' => 'journey.mealId' %>
    <% end %>
  </div>

  <div class="d-flex justify-content-center hide form-width", data-target="journey.postalCode">
    <%= simple_form_for(@meal, method: :post) do |f| %>
      <%= f.input :postal_code, label: 'Postal Code', input_html: { class: "sharp-box hide", 'data-target' => "journey.postalCode", placeholder: "Where will you be dining today?" }, label_html: { class: "hide",  'data-target' => "journey.postalCode" } %>
      <%= f.input :pax, label: 'How many people?', input_html: { class: "sharp-box" } %>
      <%= f.input :endtime, input_html: { class: "sharp-box timefield hide", 'data-target' => "journey.postalCode", id: 'endtime' }, label_html: { class: "hide", 'data-target' => "journey.postalCode" }, class: "hide" %>
      <%= f.submit 'Create Makan', class: 'btn primarybtn btn-block hide', 'data-target' => "journey.postalCode" %>
    <% end %>
  </div>

</div>
