<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "sharp-box" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "sharp-box" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn primarybtn btn-block" %>
  </div>
<% end %>

<div class="my-3">
  <%= render "devise/shared/links" %>
</div>
