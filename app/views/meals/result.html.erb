<% if Time.now > @endtime %>
  <h1>Aunty's Verdict:</h1>
  <% @top_cuisine.each do |cuisine| %>
    <%= render partial: 'verdict', locals: { cuisine: cuisine } %>
  <% end %>
<% else %>
  <h1>Aunty's still waiting...</h1>
  <h3>Your poll ends: <%= @endtime %></h3><br>
  <p>Please check back after poll closing time for Aunty's verdict.</p></br>
<% end %>



