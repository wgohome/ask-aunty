<% polls = Poll.where(meal_id: @meal).length / 10.0 %>
<% if @endtime == nil || Time.now > @endtime || @meal.pax == polls %>
  <h4><strong>Aunty's Verdict</strong></h4>
  <p><strong>Makan Code: <%= @meal.vanity_id %></strong></p>
  <% if @polls == [] %>
    <p>Your poll closed but no one voted :(</p>
  <% else %>
    <% cuisine_count = 1 %>
    <% @polls.each do |poll| %>
      <%= render partial: 'verdict', locals: { poll: poll, restaurants: @restaurants, cuisine_count: cuisine_count } %>
      <% cuisine_count += 1 %>
    <% end %>
    <br>
    <% if @collated_prefs.any? %>
      <div>
        <h4><strong> PS: Your Group's Preferences</strong></h4>
        <ul style="list-style-type:square">
          <% @collated_prefs.each do |p| %>
            <li><%= p.name %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
<% else %>
<!--   <%= image_tag image_path('aunty-square.svg') %>-->
  <%= image_tag "aunty-square.svg", class: "rotate" %><br>
  <h4>Aunty's still working on it...</h3>
  <p>Can wait? Come back to Aunty in <%= @time_left %> for results.</p></br>
