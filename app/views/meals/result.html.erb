<% if @endtime == nil || Time.now > @endtime  %>
  <h1>Aunty's Verdict:</h1>
  <% if @polls == [] %>
    <p>Your poll closed but no one voted :(</p>
  <% else %>
    <% @polls.each do |poll| %>
      <%= render partial: 'verdict', locals: { poll: poll } %>
    <% end %>
    <br>
    <div>
      <h2><strong> PS: Your Group's Preferences</strong></h2>
      <ul style="list-style-type:square">
        <% @collated_prefs.each do |p| %>
          <li><%= p.name %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% else %>
  <%= image_tag image_path('aunty-square.svg') %>
  <h3>Aunty's still working on it...</h3>
  <p>Can wait? Come back to Aunty in <%= @time_left %> for results.</p></br>

