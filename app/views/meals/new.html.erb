<div class="d-flex justify-content-center" data-controller="newmeal">
  <%= simple_form_for(@meal,remote: true) do |f| %>
    <%= f.input :postal_code, label: 'Postal Code', input_html: { class: "sharp-box" } %>
    <%= f.submit 'Create Meal', class: 'btn btn-primary btn-block', data: { action: "click->newmeal#refresh"} %>
  <% end %>
