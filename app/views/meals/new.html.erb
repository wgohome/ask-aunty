<div class="d-flex justify-content-center">
  <%= simple_form_for(@meal) do |f| %>
    <%= f.input :postal_code, label: 'Postal Code', input_html: { class: "sharp-box", placeholder: "Enter valid postal code" } %>
    <%= f.input :pax, label: 'How many pax?', input_html: { class: "sharp-box" } %>
    <%= f.input :endtime, input_html: { class: "sharp-box" } %>
    <%= f.submit 'Create Meal', class: 'btn primarybtn btn-block' %>
  <% end %>
</div>
