<h2>Join Meal</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enter" %>
  </div>
<% end %>

